{{#if supplier.team.length}}
    <div class="section">
        <div class="section-inner">
            <h2 class="section-heading">Meet the Team</h2>
            {{#each supplier.team}}
                <div class="team">
                    <img class="team__photo" data-original="{{imageUri}}" width="119" height="119" alt="{{title}} {{givenName}} {{familyName}}" />
                    <div class="team__details">
                        <h3>{{title}} {{givenName}} {{familyName}}</h3>
                        <p>{{jobTitle}}</p>
                    </div>
                    <a href="#rfi" class="team__contact btn btn--secondary">Contact us for more information</a>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}

{{#if supplier.faqs.length}}
    <div class="section">
        <div class="section-inner">
            <h2 class="section-heading">Frequently Asked Questions</h2>
            {{#each supplier.faqs}}
                <details class="faq" {{#if @first}}open{{/if}}>
                    <summary class="faq__question">{{question}}</summary>
                    <p class="faq__answer">{{answer}}</p>
                </details>
            {{/each}}
        </div>
    </div>
{{/if}}

<div class="rfi section section--alt">
    <div class="section-inner">
        <h2 class="section-heading">Availability &amp; Pricing</h2>
        <p class="text-center">Contact {{supplier.business.name}} for more details about their availability for your wedding date</p>
        <form class="rfi__form">
            <div class="rfi__fields">
                <div class="rfi__field rfi__field--message">
                    <label for="message">Message</label>
                    <textarea name="message">Hi, I found you on hitched and would love more information on your services and pricing.</textarea>
                </div>
                <div class="rfi__field rfi__field--firstName">
                    <label for="first_name">First Name</label>
                    <input type="text" name="first_name" placeholder="First name" />
                </div>
                <div class="rfi__field rfi__field--lastName">
                    <label for="last_name">Last Name</label>
                    <input type="text" name="last_name" placeholder="Last name" />
                </div>
                <div class="rfi__field rfi__field--email">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="Email" />
                </div>
                <div class="rfi__field rfi__field--date">
                    <label for="date">Wedding Date</label>
                    <input type="date" name="date" placeholder="Wedding date" />
                </div>
                <div class="rfi__field rfi__field--phone">
                    <label for="phone">Phone</label>
                    <input type="tel" name="phone" placeholder="Phone" />
                </div>
                <div class="rfi__field rfi__field--checkboxes">
                    <input type="checkbox" /> Subscribe to the hitched newsletter
                    <input type="checkbox" /> Subscribe to hitched special offers
                    <input type="checkbox" /> Subscribe to selected 3rd party emails
                </div>
            </div>

            <div class="rfi__btns">
                <input type="subit" value="Request Pricing Details" class="btn btn--primary" />
                <button type="button" class="btn btnShortlist">
                    <span class="btnShortlist__icon fa fa-heart-o"></span>
                    <span class="btnShortlist__txt">Save to shortlist</span>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="about-grid">
    <div id="about" class="section section--about">
        <div class="section-inner">
            <h2 class="section-heading">About {{supplier.business.name}}</h2>
            <div class="aboutWrapper">
                {{{supplier.description}}}
                <div class="aboutWrapper-overlay"></div>
            </div>
            <button id="aboutBtn" type="button" class="btn hide-lg">Continue Reading</button>
        </div>
    </div>
    {{#if supplier.images.[0].path}}
        <img data-original="{{supplier.images.[0].path}}" alt="{{supplier.images.[0].path}}" class="detailsImg detailsImg-1" />
    {{/if}}
</div>

{{#if supplier.specialOffers.length}}
    <div id="offers" class="section section--alt text-center">
        <div class="section-inner">
            {{#each supplier.specialOffers}}
                <div class="offer">
                    <div class="offer__heading">
                        <img src="/dist/img/exclusive.png" alt="" />
                        <h2><span class="fa fa-tag"></span> Special Offer</h2>
                        <h3 class="offer__title">{{name}}</h3>
                    </div>
                    <p class="offer__description">{{description}}</p>
                </div>
            {{/each}}
        </div>
    </div>
{{/if}}

<div class="reviews-grid">
    {{#if supplier.images.[1].path}}
        <img data-original="{{supplier.images.[1].path}}" class="detailsImg detailsImg-2" alt="{{supplier.images.[1].name}}" />
