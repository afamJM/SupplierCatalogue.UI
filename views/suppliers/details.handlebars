<div class="hero">
    <div class="hero__images">
        {{#each supplier.images}}
            <img src="{{path}}" alt="{{name}}" class="hero__img" />
        {{/each}}
    </div>
    <a href="#" class="hero__nav hero__nav--prev">
        <span class="fa fa-chevron-left"></span>
    </a>
    <a href="#" class="hero__nav hero__nav--next">
        <span class="fa fa-chevron-right"></span>
    </a>
    <span class="hero__count hide-lg"><span class="fa fa-photo"></span> ({{supplier.images.length}})</span>
</div>

<div class="intro">
    <div class="avatar">
        <img class="avatar-img" src="{{#if supplier.profileImage}}{{supplier.profileImage}}{{else}}{{supplier.coverImage.path}}{{/if}}" alt="{{supplier.business.name}}" width="110px" />
        <button type="button" class="btn btn--secondary hide-sm">View Photos ({{supplier.images.length}})</button>
    </div>

    <div class="details">
        <h1 class="details__name">{{supplier.business.name}}</h1>
        <div class="details-meta">
            <span>{{supplier.location.name}}</span>
            <span>
                {{stars supplier.starRating}}
                {{supplier.reviews.length}} Review(s)
            </span>
            <span>
                <span class="fa fa-map-marker"></span>
                {{supplier.location.county}}
            </span>
        </div>
    </div>

    {{#if supplier.specialOffers.length}}
        <a href="#offers" class="offerCta">
            <span class="fa fa-tag"></span>
            Exclusive special offer for members
        </a>
    {{/if}}

    <nav class="sectionNav text-center">
        <a href="#about" class="sectionNav-link">About</a>
        {{#if supplier.specialOffers.length}}
            <a href="#offers" class="sectionNasectionNav-linkv__link">Special Offer</a>
        {{/if}}
        <a href="#reviews" class="sectionNav-link">Reviews</a>
        <a href="#recommendations" class="sectionNav-link">Recommendations</a>
        <a href="#weddingfairs" class="sectionNav-link">Wedding Fairs</a>
        <a href="#location" class="sectionNav-link">Location</a>
    </nav>

    <div class="contact section section--alt">
        <div class="section-inner">
            <h2 class="section-heading hide-lg">Availability &amp; Prices</h2>
            <p class="text-center hide-lg">Contact {{supplier.business.name}} for more details about their availability for your wedding date</p>
            <a href="#rfi" class="btn btn--primary hide-lg">Request pricing details</a>
            <a href="#rfi" class="btn btn--primary hide-sm">Contact Supplier</a>
            <button type="button" class="btn btnShortlist">
                <span class="btnShortlist__icon fa fa-heart-o"></span>
                <span class="btnShortlist__txt">Save to shortlist</span>
            </button>
        </div>
    </div>

    <div class="links">
        {{#if supplier.business.phoneNumbert}}
            <a href="#">
                <span class="fa fa-mobile"></span>
                {{supplier.business.phoneNumbert}}
            </a>
        {{/if}}
        <a href="{{supplier.website}}" target="_blank">
            <span class="fa fa-globe"></span>
            Website
        </a>
        <div class="social">
            <span>Follow:</span>
            <a href="#"><span class="fa fa-facebook-square"></span></a>
            <a href="#"><span class="fa fa-twitter-square"></span></a>
            <a href="#"><span class="fa fa-instagram"></span></a>
        </div>
    </div>
</div>

<div class="services section">
    <div class="section-inner">
